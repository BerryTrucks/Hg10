<qnx xmlns="http://www.qnx.com/schemas/application/1.0">

<!-- BlackBerry 10 application descriptor file.

    Specifies parameters for identifying, installing, and launching native applications on BlackBerry 10.

-->

    <!-- A universally unique application identifier. Must be unique across all BlackBerry 10 applications.
         Using a reverse DNS-style name as the id is recommended. (Eg. com.example.ExampleApplication.) Required. -->
    <id>com.amonchakai.Hg10</id>
    <configuration name="Device-Debug">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm/o.le-v7-g/Hg10" entry="true" type="Qnx/Elf">Hg10</asset>
       <asset entryPointId="HeadlessHg" path="../HeadlessHg/arm/o.le-v7-g/HeadlessHg" type="Qnx/Elf">HeadlessHg</asset> 
    </configuration>
    <configuration name="Device-Release">
       <entryPointType>Qnx/Cascades</entryPointType>
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm/o.le-v7/Hg10.so" entry="true" type="Qnx/Elf">Hg10.so</asset>
      <asset entryPointId="HeadlessHg" path="../HeadlessHg/arm/o.le-v7-g/HeadlessHg" type="Qnx/Elf">HeadlessHg</asset> 
    </configuration>
    <configuration name="Device-Profile">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm-p/o.le-v7-g/Hg10" entry="true" type="Qnx/Elf">Hg10</asset>
       <asset entryPointId="HeadlessHg" path="../HeadlessHg/arm/o.le-v7-g/HeadlessHg" type="Qnx/Elf">HeadlessHg</asset> 
    </configuration>
    <configuration name="Simulator-Debug">
       <platformArchitecture>x86</platformArchitecture>
       <asset entryPointId="HeadlessHg" path="../HeadlessHg/x86/o-g/HeadlessHg" type="Qnx/Elf">HeadlessHg</asset> 
       <asset path="x86/o-g/Hg10" entry="true" type="Qnx/Elf">Hg10</asset>
    </configuration>

    <!-- The name that is displayed in the BlackBerry 10 application installer.
         May have multiple values for each language. See samples or xsd schema file. Optional. -->
    <name>
       Hg10
    </name>

    <!-- A string value of the format <0-999>.<0-999>.<0-999> that represents application version which can be used to check for application upgrade.
         Values can also be 1-part or 2-part. It is not necessary to have a 3-part value.
         An updated version of application must have a versionNumber value higher than the previous version. Required. -->
    <versionNumber>0.1.0</versionNumber>

    <!-- Fourth digit segment of the package version. First three segments are taken from the
         <versionNumber> element.  Must be an integer from 0 to 2^16-1 -->
    <buildId>43</buildId>

    <!-- A string value (such as "v1", "2.5", or "Alpha 1") that represents the version of the application, as it should be shown to users. Optional. -->
    <!-- <versionLabel></versionLabel> -->

    <!-- Description, displayed in the BlackBerry 10 application installer.
         May have multiple values for each language. See samples or xsd schema file. Optional. -->
    <description>The Hg10 application</description>

    <!-- Copyright information. Optional. -->
    <!-- <copyright></copyright> -->

    <!--  Name of author which is used for signing. Must match the developer name of your development certificate. -->
    <authorId>gYAAgCQoPRQtK2AS30z0Bo75Z74</authorId>
    <author>Pierre Lebreton</author>

    <!--  Unique author ID assigned by signing authority. Required if using debug tokens. -->
    <!-- <authorId>ABC1234YjsnUk235h</authorId> -->

    <initialWindow>
        <autoOrients>true</autoOrients>
        <systemChrome>none</systemChrome>
    </initialWindow>

    <!--  The icon for the application, which should be 114x114. -->
    <icon>
        <image>icon.png</image>
    </icon>

    <asset path="icon.png">icon.png</asset>
    <asset path="assets">assets</asset>

    <!-- Locale support -->
    <asset path="translations" dest="qm">
        <include name="*.qm"/>
    </asset>

    <!-- Request permission to execute native code.  Required for native applications. -->
    <permission system="true">run_native</permission>
    <permission>post_notification</permission>
    <permission>access_shared</permission>
    <env var="LD_LIBRARY_PATH" value="app/native/lib:/usr/lib/qt4/lib"/>


    <!-- Set entry point for Hg10. -->
    <entryPoint id="Hg10">
      <name>Hg10</name>
    </entryPoint>

    <entryPoint id="HeadlessHg">
      <name>HeadlessHg</name>
      <entryPointType>Qnx/Elf</entryPointType>
      <permission system="true">run_native</permission>
      <permission system="true">_sys_run_headless</permission>
      <permission system="true">_sys_headless_nostop</permission>
    </entryPoint>




    <!-- Send messages to HeadlessHg. -->
    <invoke-target id="com.amonchakai.Hg10">
      <entry-point-id>Hg10</entry-point-id>
      <invoke-target-name>Hg10</invoke-target-name>
      <invoke-target-type>card.previewer</invoke-target-type>
      <filter>
        <action>bb.action.VIEW</action>
        <mime-type>hub/vnd.hg10.item</mime-type>
        <property var="uris" value="data://,pim:"/>
      </filter>
    </invoke-target>

    <invoke-target id="com.amonchakai.Hg10.Headless">
      <invoke-target-type>application.headless</invoke-target-type>
      <invoke-target-name>HeadlessHg</invoke-target-name>
      <entry-point-id>HeadlessHg</entry-point-id>
      <filter>
       <action>bb.action.system.STARTED</action>
       <mime-type>application/vnd.blackberry.system.event.STARTED</mime-type>
       <property var="uris" value="data://local"/>
     </filter>
     <filter>
       <action>bb.action.START</action>
       <mime-type>*</mime-type>
       <property var="uris" value="headless:"/>
     </filter>
     <filter>
       <action>bb.action.DELETE</action>
       <mime-type>hub/vnd.hg10.item</mime-type>
       <property var="uris" value="data://,pim:"/>
     </filter>
     <filter>
      <action>bb.action.MARKREAD</action>
      <mime-type>hub/vnd.hg10.item</mime-type>
      <property var="uris" value="data://,pim:"/>
    </filter>
    <filter>
      <action>bb.action.MARKUNREAD</action>
      <mime-type>hub/vnd.hg10.item</mime-type>
      <property var="uris" value="data://,pim:"/>
    </filter>
    <filter>
      <action>bb.action.MARKPRIORREAD</action>
      <mime-type>hub/vnd.hg10.item</mime-type>
      <property var="uris" value="data://,pim:"/>
    </filter>
    <filter>
      <action>bb.action.DELETEPRIOR</action>
      <mime-type>hub/vnd.hg10.item</mime-type>
      <property var="uris" value="data://,pim:"/>
    </filter>
  </invoke-target>

</qnx>
